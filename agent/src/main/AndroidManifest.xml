<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="faith.changliu.orda3testing.agent">

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="faith.changliu.orda3testing.base.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.AgentSplashActivity"
            android:launchMode="singleTop"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.AgentLoginActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop" />

        <activity android:name=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".activities.ScannerActivity"
            android:launchMode="singleTop" />

    </application>
</manifest>
